<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <h2>Publicar Pregunta</h2>
      <%= form_for @question do |f| %>
        <div class="form-group">
          <%= f.text_field :title, class: "form-control input-lg", placeholder: "Título" %>
        </div>
        <div class="form-group">
          <%= f.text_area :description, rows: 7, class: "form-control input-lg", placeholder: "Descripción" %>
        </div>

        <div>
          <%= f.submit "¡Preguntar!", class: "btn btn-primary btn-lg btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>